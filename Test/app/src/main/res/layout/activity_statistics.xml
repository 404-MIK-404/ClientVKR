<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityTasks.Statistics">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="10dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:paddingRight="10dp"
            android:text="Статистика эффективности"
            android:textAlignment="center"
            android:textColor="#5D5C61"
            android:textSize="35dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:background="@drawable/border"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">


            <TextView
                android:id="@+id/nameCountTaskView"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/nameTextCountTaskViewRu"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/nameValueCountTaskView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="TextView3"
                android:textColor="@color/black"
                android:textSize="20dp" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:background="@drawable/border">


            <TextView
                android:id="@+id/nameCountDoneTaskView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/nameTextCountDoneTaskViewRu"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/nameValueCountDoneTaskView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="TextView3"
                android:textColor="@color/black"
                android:textSize="20dp" />



        </LinearLayout>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/PieTaskDoneNotDone"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:background="@drawable/border"
            android:layout_marginBottom="10dp">


            <TextView
                android:id="@+id/nameCountLateDateTaskView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/nameTextCountLateDateTaskViewRu"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/nameValueCountLateDateTaskView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="TextView3"
                android:textColor="@color/black"
                android:textSize="20dp" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:background="@drawable/border"
            android:layout_marginBottom="10dp">


            <TextView
                android:id="@+id/nameCountNotLateDateTaskView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/nameTextCountNotLateDateTaskViewRu"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/nameValueCountNotLateDateTaskView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="TextView3"
                android:textColor="@color/black"
                android:textSize="20dp" />



        </LinearLayout>

        <Button
            android:id="@+id/ButtonBack"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/border_no_gradient"
            android:fontFamily="@font/inter"
            android:onClick="BackToMenu"
            android:ems="7"
            android:text="@string/backRu"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#5D5C61"
            android:textSize="20dp"
            app:backgroundTint="@null" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>